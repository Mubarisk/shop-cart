<section>
    <div class="container">
        
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">name</th>
                    <th scope="col">category</th>
                    <th scope="col">price</th>
                    <th scope="col">image</th>
                    <th scope="col">edit</th>
                    <th scope="col">delete</th>

                </tr>
            </thead>
            <tbody>
                {{#each products}}
                {{#each this}}
                <tr>

                   {{#if name}}
                    <th scope="row">1</th>
                    <td>{{name}}</td>
                    <td>{{category}} </td>
                    <td>{{price}} </td>
                    <td><img src="/product-images/{{this._id}}.jpg" alt="err" style="height: 50px;width:50px"></td>
                    <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">edit</a></td>
                    <td><a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
                            onclick="return confirm('Are you want to delete {{this.name}}?')"> delete</a></td>
                  {{/if}}
                </tr>
             {{/each}}

                {{/each}}
            </tbody>

        </table>
    </div>
</section>